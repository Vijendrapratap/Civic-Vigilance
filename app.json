{
  "expo": {
    "name": "CivicVigilance",
    "slug": "civicvigilance",
    "scheme": "civicvigilance",
    "version": "0.1.0",
    "orientation": "portrait",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "CivicVigilance needs camera access to capture civic issues.",
        "NSLocationWhenInUseUsageDescription": "CivicVigilance uses your location to tag reports accurately."
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "package": "com.anonymous.civicvigilance"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera"
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "CivicVigilance uses your location to tag reports accurately.",
          "isAndroidForegroundServiceEnabled": true
        }
      ]
    ]
  }
}
