rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Reports images - authenticated users can upload, everyone can read
    match /reports/{reportId}/{imageFile} {
      // Allow read for all (public reports)
      allow read: if true;

      // Allow write for authenticated users
      // File must be an image and less than 10MB
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // User avatars
    match /avatars/{userId}/{imageFile} {
      // Allow read for all
      allow read: if true;

      // Allow write only for the user themselves
      // File must be an image and less than 5MB
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
