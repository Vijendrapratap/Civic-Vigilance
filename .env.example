# Twitter OAuth 2.0 Client Credentials (for user account connections)
EXPO_PUBLIC_TWITTER_CLIENT_ID=your_oauth_client_id
EXPO_PUBLIC_TWITTER_REDIRECT_URI=civicvigilance://oauth/twitter

# Google Maps API
# Get from: https://console.cloud.google.com/apis/credentials
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# App Configuration
EXPO_PUBLIC_APP_NAME=Civic Vigilance
EXPO_PUBLIC_CIVIC_VIGILANCE_TWITTER_HANDLE=@CivicVigilance

# Supabase Functions URL (replace YOUR_PROJECT_REF with your actual project ID)
# Format: https://YOUR_PROJECT_REF.supabase.co/functions/v1
EXPO_PUBLIC_API_URL=https://YOUR_PROJECT_REF.supabase.co/functions/v1

# Supabase Configuration (RECOMMENDED - Primary Backend)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
EXPO_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key


# Control backend selection and auto-guest for development/testing
# Values: supabase | sqlite
EXPO_PUBLIC_BACKEND_MODE=supabase
# If true and backend is sqlite, automatically create a local guest session
EXPO_PUBLIC_AUTO_GUEST=false
